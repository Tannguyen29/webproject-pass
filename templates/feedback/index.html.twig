{% extends 'base.html.twig' %}

{% block title %}Hello FeedbackController!{% endblock %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Feedback List</h1>
        </th>
    </tr>
    <tr>
        <th class="text text-success">id</th>
        <th class="text text-success">Title</th>
        <th class="text text-success">description</th>
        <th class="text text-success">Actions</th>
{% for feedback in feedbacks %}
    <tr>    
        <td>{{ feedback.id }}</td>
        <td>{{ feedback.title }}</td>
        <td>{{ feedback.description }}</td>
        <td>
                <a class="text-decoration-none" href="{{ path('feedback_delete', {'id' : feedback.id }) }}"
                onclick="return confirm('Are you sure to delete this feedback ?');"
                >
                    <img src="{{ asset('/button/delete.png') }}" width="40" height="40">
                </a>
            </td>

    </tr>
{% endfor %}
{% endblock %}