{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Student List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('app_register') }}">
                <img src="{{ asset('/button/add3.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Student Id</th>
        <th class="text text-success">Student Name</th>
        <th class="text text-success">Student Image</th>
        <th class="text text-success">Actions</th>
    </tr>
{% for userdetail in userdetails %}
    <tr>
        <td>{{ userdetail.id }}</td>
        <td>{{ userdetail.name }}</td>
        <td> <a class="text-decoration-none" href="{{ path('student_detail', {'id' : userdetail.id }) }}">
        <img src="{{ userdetail.image }}" width="100" height="100"></a></td>
        <td>
                <a class="text-decoration-none" href="{{ path('student_detail', {'id' : userdetail.id }) }}">
                    <img src="{{ asset('/button/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('student_edit', {'id' : userdetail.id }) }}">
                    <img src="{{ asset('/button/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('student_delete', {'id' : userdetail.id }) }}"
                onclick="return confirm('Are you sure to delete this student ?');"
                >
                    <img src="{{ asset('/button/delete.png') }}" width="40" height="40">
                </a>
            </td>

    </tr>
{% endfor %}
{% endblock %}